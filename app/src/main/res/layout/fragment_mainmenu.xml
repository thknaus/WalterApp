<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_newgame"
        style="@style/Button_Large"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_big_big"
        android:text="@string/newGame" />

    <Button
        android:id="@+id/button_existinggame"
        style="@style/Button_Large"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/existingGame" />

    <Button
        android:id="@+id/button_joingame"
        style="@style/Button_Large"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/joinGame" />

    <Button
        android:id="@+id/button_gamesettings"
        style="@style/Button_Large"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/gameSettings" />

    <Button
        android:id="@+id/button_exitgame"
        style="@style/Button_Large"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/exitGame" />

</LinearLayout>