<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_newgame_addplayer"
            style="@style/Button_Large_Small"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_big_big"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginStart="@dimen/margin_big_big"
            android:text="@string/addplayer" />

        <Button
            android:id="@+id/button_newgame_frind"
            android:layout_marginStart="@dimen/margin"
            style="@style/Button_Large_Small"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_big_big"
            android:text="@string/invite_friend" />

    </LinearLayout>



    <Button
        android:id="@+id/button_newgame_player1"
        style="@style/Button_Large_Long"
        android:layout_gravity="center"

        android:text="@string/yourplayername" />

    <Button
        android:id="@+id/button_newgame_player2"
        style="@style/Button_Large_Long"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/playername"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_newgame_player3"
        style="@style/Button_Large_Long"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/playername"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_newgame_player4"
        style="@style/Button_Large_Long"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/playername"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_newgame_player5"
        style="@style/Button_Large_Long"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/playername"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_newgame_player6"
        style="@style/Button_Large_Long"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/playername"
        android:visibility="gone" />

</LinearLayout>