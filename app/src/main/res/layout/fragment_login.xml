<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_big_big"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/margin_large"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_large"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="@dimen/margin"
        android:background="@drawable/frame_inputtext"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/margin"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pw"
        android:background="@drawable/frame_inputtext"
        android:padding="@dimen/margin"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_big_big">

        <Button
            android:id="@+id/button_login"
            style="@style/Button_Medium"
            android:layout_gravity="center|top"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/login" />
        <Button
            android:id="@+id/button_register"
            style="@style/Button_Medium"
            android:layout_gravity="center|top"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/register" />

        <Button
            android:id="@+id/button_close"
            style="@style/Button_Medium"
            android:layout_gravity="center|top"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/exit" />

    </LinearLayout>


</LinearLayout>